{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Bread",
  "colors": {
    "primary": "#6b39ff",
    "light": "#6b39ff",
    "dark": "#6b39ff"
  },
  "description": "Universal bridge between Crypto and local currencies",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "favicon": "/favicon.png",
  "icons": {
    "library": "lucide"
  },
  "eyebrows": "section",
  "font": {
    "family": "Inter",
    "weight": "400"
  },
  "navigation": {
    "interaction": {
      "drilldown": true
    },
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["introduction", "quickstart", "currency", "asset"]
          },
          {
            "group": "Guides",
            "pages": ["wallet", "offramp", "onramp"]
          }
        ]
      },
      {
        "dropdown": "API reference",
        "icon": "terminal",
        "groups": [
          {
            "group": "API reference",
            "openapi": {
              "source": "/openapi.json"
            }
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo_light.svg",
    "dark": "/logo_dark.svg",
    "href": "https://docs.bread.africa"
  },
  "api": {
    "mdx": {
      "auth": {
        "method": "bearer"
      }
    }
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get started",
      "href": "https://bread.africa"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/bread_africa",
      "linkedin": "https://www.linkedin.com/company/bread-africa",
      "github": "https://github.com/bread-africa"
    }
  },
  "thumbnails": {
    "background": "/images/thumbnail/background.svg"
  }
}
